<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/performers/new.css" />
<%- include('../partials/nav') %>

<main>
  <h1><%= title %></h1>
  <p>
    Make sure to ensure that the meal is in the dropdown!
    <select>
      <% meals.forEach(meal => { %>
      <option><%= meal.name %></option>
      <% }) %>
    </select>
  </p>
  <form id="add-performer-form" action="" method="POST">
    <label for="name-input">Meal: </label>
    <input type="text" name="name" id="name-input" />
    <button type="submit">Add meal</button>
  </form>
</main>

